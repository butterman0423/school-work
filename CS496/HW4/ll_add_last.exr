(* Add Last exercise *)

let l1 = { head <= 0; length <= 0} (* 0 in head signals null *)
in letrec add_last_helper(nd) = proc (key) {
                 if number?(nd.next)
		 then nd.next <= { data <=key; next <= 0 }
	         else ((add_last_helper nd.next) key)
	      } 
in let add_last = proc(lst) { proc(v) {
	begin
		if number?(lst.head)
		then if zero?(lst.head)
			 then lst.head <= { data <= v; next <= 0}
         	 else lst.length <= lst.length - 1
		else ((add_last_helper lst.head) v);
		lst.length <= lst.length + 1
	end
} }
in begin
     ((add_last l1) 2);
     ((add_last l1) 3);
     ((add_last l1) 4);
     debug(l1)  (* required inspect the list *)
   end
